<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivSearchRestau"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/_image_one" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivSearchRestau"
                app:layout_constraintEnd_toEndOf="@+id/ivSearchRestau"
                app:srcCompat="@drawable/heart_like_" />

            <RatingBar
                android:id="@+id/ivRattingSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                style="@style/CustomRatingBar"
                android:rating="4"
                app:layout_constraintBottom_toBottomOf="@+id/ivSearchRestau"
                app:layout_constraintStart_toStartOf="@+id/ivSearchRestau"
                 />

            <com.TUBEDELIVERIES.Utility.SourceSansProRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="4.2 (200 reviews)"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivRattingSearch"
                app:layout_constraintStart_toEndOf="@+id/ivRattingSearch"
                app:layout_constraintTop_toTopOf="@+id/ivRattingSearch" />

            <com.TUBEDELIVERIES.Utility.SourceSansProSemiboldTextView
                android:id="@+id/tvSearchRestauName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Radison Blu"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivSearchRestau" />

            <com.TUBEDELIVERIES.Utility.SourceSansProRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="L2 Centratage Mall , Sector 18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodTypeSearch" />

            <com.TUBEDELIVERIES.Utility.SourceSansProRegularTextView
                android:id="@+id/tvFoodTypeSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="North Indian"
                android:textColor="@color/light_grey"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view25"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchRestauName" />

            <com.TUBEDELIVERIES.Utility.SourceSansProRegularTextView
                android:id="@+id/tvFoodTypeSearch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Italian"
                android:textColor="@color/light_grey"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view29"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchRestauName" />

            <com.TUBEDELIVERIES.Utility.SourceSansProRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Chinese"
                android:textColor="@color/light_grey"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/view30"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchRestauName" />

            <View
                android:id="@+id/view25"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_dot_circle"
                app:layout_constraintBottom_toBottomOf="@+id/tvFoodTypeSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvFoodTypeSearch" />

            <View
                android:id="@+id/view29"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_dot_circle"
                app:layout_constraintBottom_toBottomOf="@+id/tvFoodTypeSearch"
                app:layout_constraintStart_toEndOf="@+id/tvFoodTypeSearch"
                app:layout_constraintTop_toTopOf="@+id/tvFoodTypeSearch" />

            <View
                android:id="@+id/view30"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_dot_circle"
                app:layout_constraintBottom_toBottomOf="@+id/tvFoodTypeSearch"
                app:layout_constraintStart_toEndOf="@+id/tvFoodTypeSearch2"
                app:layout_constraintTop_toTopOf="@+id/tvFoodTypeSearch" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>